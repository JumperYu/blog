<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 定义日志文件的存储地址相对路径 -->
	<property name="LOG_HOME" value="/data/log/bradypod" />

	<!-- 控制台输出 -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} %level [%thread] %class:%line >> %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 按照每天生成日志文件 -->
	<appender name="file"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--日志文件输出的文件名 -->
			<FileNamePattern>${LOG_HOME}/day.blog.bradypod.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<!--日志文件保留天数 -->
			<MaxHistory>31</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId}] [%thread] %-5level
				%logger{50} - %msg%n</pattern>
			<ImmediateFlush>true</ImmediateFlush>
		</encoder>
	</appender>
	
	<!-- show parameters for hibernate sql 专为 Hibernate 定制 --> 
    <logger name="org.springframework"  level="WARN" />  
    <logger name="com.yu"  level="INFO" /> 
	
	<!-- 按照每月生成日志文件 -->   
    <appender name="month_file"  class="ch.qos.logback.core.rolling.RollingFileAppender">   
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/month.blog.braydpod.log.%d{yyyy-MM}.log</FileNamePattern> 
            <!--日志文件保留月数-->
            <MaxHistory>6</MaxHistory>
        </rollingPolicy>   
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        	<!-- 设置缓存 -->
        	<ImmediateFlush>false</ImmediateFlush>
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符--> 
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId}] [%thread] %-5level %logger{50} - %msg%n</pattern>   
        </encoder>
    </appender>
    
    <!-- 定义登录日志阻塞队列出错时日志输出 --> 
<!--     <logger name="com.yu.log.LoginLogQueue" level="ERROR" additivity="false">
    	<appender-ref ref="month_file" />
    </logger>  --> 
	
	<root level="INFO">
		<appender-ref ref="stdout" />
	</root>
</configuration> 